{
  "kind" : "Deployment",
  "apiVersion" : "apps/v1",
  "metadata" : {
    "name" : "RecipeOne",
    "labels" : {
      "baker-name" : "RecipeOne"
    }
  },
  "spec" : {
    "replicas" : 2,
    "selector": {
      "matchLabels": {
        "baker-name": "RecipeOne"
      }
    },
    "template" : {
      "metadata" : {
        "name" : "RecipeOne",
        "labels" : {
          "baker-name" : "RecipeOne",
          "akka-cluster" : "RecipeOne"
        }
      },
      "spec" : {
        "containers" : [ {
          "name" : "RecipeOne",
          "image" : "bakery-baker:local",
          "ports" : [ {
            "containerPort" : 8080,
            "protocol" : "TCP",
            "name" : "http-api"
          }, {
            "containerPort" : 8558,
            "protocol" : "TCP",
            "name" : "management"
          }, {
            "containerPort" : 2552,
            "protocol" : "TCP",
            "name" : "remoting"
          } ],
          "env" : [ {
            "name" : "STATE_CLUSTER_SELECTOR",
            "value" : "RecipeOne"
          }, {
            "name" : "RECIPE_DIRECTORY",
            "value" : "/recipes"
          }, {
            "name" : "JAVA_TOOL_OPTIONS",
            "value" : "-XX:+UseContainerSupport -XX:MaxRAMPercentage=85.0"
          } ],
          "resources" : {
            "requests" : {
              "memory" : "500Mi",
              "cpu" : "600m"
            },
            "limits" : {
              "memory" : "1000Mi",
              "cpu" : "6000m"
            }
          },
          "volumeMounts" : [ {
            "name" : "recipes",
            "mountPath" : "/recipes",
            "readOnly" : true
          }, {
              "name" : "config",
              "mountPath" : "/bakery-config",
              "readOnly" : true
            }],
          "livenessProbe" : {
            "httpGet" : {
              "port" : "management",
              "path" : "/health/alive",
              "scheme" : "HTTP"
            },
            "initialDelaySeconds" : 15,
            "timeoutSeconds" : 10
          },
          "readinessProbe" : {
            "httpGet" : {
              "port" : "management",
              "path" : "/health/ready",
              "scheme" : "HTTP"
            },
            "initialDelaySeconds" : 15,
            "timeoutSeconds" : 10
          },
          "imagePullPolicy" : "IfNotPresent"
        } ],
        "volumes" : [ {
          "name" : "recipes",
          "configMap" : {
            "name" : "RecipeOne-manifest"
          }
        } ],
        "restartPolicy" : "Always",
        "dnsPolicy" : "ClusterFirst"
      }
    }
  }
}