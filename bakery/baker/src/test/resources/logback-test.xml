<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger level="OFF" name="skuber.api"/>

    <logger level="OFF" name="org.http4s"/>

    <logger level="OFF" name="API"/>

    <logger level="OFF" name="com.ing.bakery.common.FailoverUtils$"/>

    <logger level="OFF" name="com.ing.bakery.scaladsl.BakerClient"/>

    <logger level="OFF" name="org.mockserver.log.MockServerEventLog"/>

    <logger level="OFF" name="com.ing.bakery.baker.RemoteInteractions"/>

</configuration>
