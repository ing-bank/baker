<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger level="ERROR" name="skuber.api"/>

  <logger level="ERROR" name="org.http4s"/>

  <logger level="DEBUG" name="bakery.InteractionOperations"/>

</configuration>